{
  "compilerOptions": {
    "baseUrl": "./",
    "noImplicitAny": false,
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "paths": {
      "react-toolkit": [
        "dist"
      ]
    }
  },
  "include": [
    "src",
    "lib"
  ]
}
